<view class="addr tab">
  <view class="tit">发货单位</view>
  <view class="con arrow" id="from"   bindtap="myaddrChange">
    <view class="addr_sel_a">{{oinfo.placenamefrom?oinfo.placenamefrom:'选择发货单位'}}</view>
  </view>
</view>
<view class="addr tab">
   <view class="tit">收货单位</view>
  <view class="con arrow" id="to" bindtap="myaddrChange" >
    <view class="addr_sel_a">{{oinfo.placenameto?oinfo.placenameto:'选择收货单位'}}</view>
  </view>
</view>
<view class="date tab">
  <view class="tit">货物清单</view>
  <view class="pro" wx:for="{{plist}}" wx:for-item="p" wx:key="name">
    <image src="{{p.imgUrl[0]}}" class="pimg"></image>
    <text class="pname">{{p.ProductName}}</text>
    <text class="pprice">{{p.ProductPrice}} x {{p.num}}</text>
    <text class="ptprice">{{p.ProductPrice*p.num}}</text>
  </view>
</view>
<view class="date tab">
</view>
<view class="date tab">
  <view class="yh">
  </view>
</view>
<view class="date tab" style="height:100px;margin-bottom:60px;">
  <view class="tit">备注</view>
  <textarea bindblur="bindTextAreaBlur" wx:if="{{!addrShow}}" class="textareastyle" placeholder="请填写备注信息（相关人姓名）..." value="{{oinfo.Remarks}}" />
</view>
<view class="tool">
  <view class="sub" bindtap="submit">发布</view>
</view>

<!--我的地址-->
<view class="addr_box" wx:if="{{addrShow}}">
  <view class="addr_head">
    <view class="addr_head_cancel" bindtap="myaddrCancel">取消</view>
    <view class="addr_head_title">我的地址</view>
  </view>
  <scroll-view scroll-y="true" scroll-top="{{scrollTop}}" style="height: 90vh">
    <view class="addr_body" data-aid="{{a.id}}" wx:for="{{addresslist}}" wx:key="id" wx:for-index="i" wx:for-item="a">
      <view class="addr_body_my">
        <view class="addr_body_my_det">{{a.placename}}</view>
         <view class="addr_body_my_det">共{{a.peoplenumber}}人</view>
         <view class="addr_body_my_det">人数截至：{{a.time}}</view>
      </view>
      <view class="addr_body_sel" data-_id="{{a._id}}" bindtap="toSelect">
        <icon type="success" size="25" data-_id="{{a._id}}" color="{{a.id==selectedID?'green':'#EEE'}}" />
      </view>
    </view>
  </scroll-view>
</view>
<!--遮罩层-->
<view class="hiddenbox" wx:if="{{addrShow}}" bindtap="closeaddr"></view>